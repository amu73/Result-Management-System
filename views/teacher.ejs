<%-include('header')-%>

        <div class="container" >
            <h1 class="mt-5 mb-5 text-center text-primary" ><b>Result Management Application</b></h1>
            <div class="row mt-5">
                <div class="col-md-3">&nbsp;</div>
                <div class="col-md-6">
                    <% if(message.length>0){ %>
                        <div class="alert alert-danger"style="text-align: center;">
                          <%= message %>
                        </div>
                      <% } %>
                    <div class="card">
                        <div class="card-header" style="height: 4rem;background-color:rgb(148, 215, 214);text-align: center;font-size:x-large;">
                            Teacher Login 
                          </div>
                        <div class="card-body" style="background-color: rgb(208, 241, 166);">
                            <form method="post" action="/teacherLogin">

                                <div class="form-group">
                                    <label for="exampleFormControlInput1" class="col-sm-2 col-form-label">Email Address<span class="required">*</span></label>
                                    <div class="col-md-9">
                                        <input type="email" name="user_email" class="form-control" id="staticEmail" placeholder="abc@gmail.com"/>

                                    </div>
                                </div><br>
                             
                                <div class="form-group">
                                    <label for="exampleFormControlInput1" class="col-sm-2 col-form-label">Password<span class="required">*</span></label>
                                    <div class="col-md-9">
                                        <input type="password" name="user_password" class="form-control" id="inputPassword" placeholder="enter password"/>                       
                                    </div>
                                </div><br>
                                
                                <div class="form-group">
                                                                         
                                    <div class="col-md-offset-3 col-md-9" style="text-align: center;" >
                                    <input type="submit" name="submit" value="Submit" class="btn btn-primary"> 
                                    <input  type="reset" value="Reset"class="btn btn-primary">                        
                                </div>
                                </div>
                            </form>
                        </div>
                    </div>              
                </div>
            </div>
        </div>
<%-include('footer')-%>